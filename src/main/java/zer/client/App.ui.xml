<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.canvas.client'>

    <ui:style>
        .container {
            position: relative;
        }

        .hover-container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .canvas {
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:HTMLPanel>
        <div>
            <span draggable="true">Drag me 01</span>
            <span draggable="true">Drag me 02</span>
            <span draggable="true">Drag me 03</span>
        </div>
        <div ui:field="canvasContainer" class="{style.container}">
            <c:Canvas ui:field="mainCanvas" addStyleNames="{style.canvas}"/>
            <div class="{style.hover-container}">
                <c:Canvas ui:field="hoverCanvas" addStyleNames="{style.canvas}"/>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>